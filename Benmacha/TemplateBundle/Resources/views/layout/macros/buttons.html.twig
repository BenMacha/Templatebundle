{% macro deleteAction(path,text=null) %}
    <a href="javascript:void(0)" data-popup="tooltip" class="deleteItem text-mauve-icon" data-path="{{ path }}" title="Remove" >
        <img width="18" src="{{ asset('custom_assets/images/icons/ic_delete.png') }}" class="" alt="">
        {{ text }}</a>
{% endmacro %}
{% macro redirectAction(path,class,text,message=null) %}
    {% if message %}
        <a href="javascript:void(0)" class="redictionItem" data-message="{{ message }}" data-path="{{ path }}"><i class="{{ class }}"></i> {{ text }} </a>
    {% else %}
        <a href="{{ path }}"><i class="{{ class }}"></i> {{ text }}</a>
    {% endif %}
{% endmacro %}
{% macro deleteRedirectAction(path,message=null) %}
    {% if message %}
        <a href="javascript:void(0)" class="redictionItem"  data-path="{{ path }}"><img width="18" src="{{ asset('custom_assets/images/icons/ic_delete.png') }}" ></a>
    {% else %}
        <a href="{{ path }}"><i class="{{ class }}"></i> {{ text }}</a>
    {% endif %}
{% endmacro %}
{% macro updateAction(path) %}
    <a href="{{ path }}" data-popup="tooltip" title="Edit" class="text-mauve-icon">
        <img width="18" src="{{ asset('custom_assets/images/icons/ic_edit.png') }}" class="" alt="">
    </a>
{% endmacro %}
{% macro viewAction(path) %}
    <a href="{{ path }}" data-popup="tooltip" title="View"><i class="icon-eye"></i></a>
{% endmacro %}
{% macro lockAction(path) %}
    <a href="{{ path }}" data-popup="tooltip" title="Change Password" class="text-mauve-icon"><i class="icon-lock"></i></a>
{% endmacro %}
{% macro addItem(text,path) %}
    <a href="{{ path }}" type="button" class="btn bg-green">{{ text }}</a>
{% endmacro %}
{% macro submitForm() %}
