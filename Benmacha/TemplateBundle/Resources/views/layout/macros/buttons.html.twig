{% endmacro %}
{% macro languages() %}
    <div class="heading-elements">
        <ul class="nav navbar-nav navbar-right">
            <li class="dropdown language-switch">
                <a class="dropdown-toggle text-gris-300" data-toggle="dropdown">
                    <img src="{{ asset('back_template/assets/images/flags/'~app.session.get("locale").code~'.png') }}" class="position-left" alt="">
                    {{ app.session.get("locale").name }}
                    <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                    <li {% if app.session.get("locale").code =="en" %}class="active"{% endif %}><a href="{{ path('change_locale',{locale:"en"}) }}" class="english"><img src="{{ asset('back_template/assets/images/flags/en.png') }}" alt=""> English</a></li>
                    <li {% if app.session.get("locale").code =="fr" %}class="active"{% endif %}><a href="{{ path('change_locale',{locale:"fr"}) }}" class="espana"><img src="{{ asset('back_template/assets/images/flags/fr.png') }}" alt=""> Francais</a></li>
                </ul>
            </li>
        </ul>
    </div>
{% endmacro %}

