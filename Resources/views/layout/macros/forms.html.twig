{% macro input(class,from,smallText=null) %}
    <div class="{{ class }}">
        <div class="form-group">
            {{ form_label(from) }}
            {{ form_widget(from,{attr:{class:"form-control"}}) | raw }}
            <div class="text-danger">{{ form_errors(from) | raw }}</div>
            {% if smallText is not null %}
                <small>{{ smallText }}</small>
            {% endif %}
        </div>
    </div>
{% endmacro %}
