<div class="mobile-menu-left-overlay"></div>
<nav class="side-menu">
    <div class="side-menu-avatar">
        <div class="avatar-preview avatar-preview-100">
            {% if app.user.image is null %}
                <img src="{{ asset('bundles/benmachatemplate/img/avatar-1-256.png') }}" alt="">
            {% else %}
                <img src="{{ asset(app.user.image) }}" alt="">
            {% endif %}
        </div>
    </div>
    <ul class="side-menu-list">
        {%  for menu in menus %}
            {% if menu.childs|length > 0 %}
                <li class="with-sub">
                    <span><i class="{{ menu.titleIcon }}"></i><span class="lbl">{{ menu.titleName|trans({},menu.titleTrans) }}</span></span>
                    <ul>
                        {% for child in  menu.childs %}
                            <li><a href="{% if child.path == "#" %}#{% else %}{{ path(child.path) }}{% endif %}"><span class="lbl">{{ child.titleName|trans({},child.titleTrans) }}</span></a></li>
                        {% endfor %}
                    </ul>
                </li>
            {% else %}
                <li><a href="{% if menu.path == "#" %}#{% else %}{{ path(menu.path) }}{% endif %}"><i class="{{ menu.titleIcon }}"></i><span class="lbl">{{ menu.titleName|trans({},menu.titleTrans) }}</span></a></li>
            {% endif %}
        {% endfor %}
    </ul>
</nav>