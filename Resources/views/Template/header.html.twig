<header class="site-header">
    <div class="container-fluid">

        <a href="#" class="site-logo">
            <h2 class="hidden-md-down site-logo-text"><b>Lucky</b> <span class="label label-primary"><b>Panel</b></span></h2>
        </a>

        <button class="hamburger hamburger--htla">
            <span>toggle menu</span>
        </button>
        <div class="site-header-content">
            <div class="site-header-content-in">
                <div class="site-header-shown">


                    <div class="dropdown dropdown-lang">
                        <button class="dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">

                            {% if app.request.locale == 'ar' %}
                                <span class="flag-icon flag-icon-tn"></span>
                            {% elseif app.request.locale == 'fr' %}
                                <span class="flag-icon flag-icon-fr"></span>
                            {% elseif app.request.locale == 'en' %}
                                <span class="flag-icon flag-icon-us"></span>
                            {% elseif app.request.locale == 'it' %}
                                <span class="flag-icon flag-icon-it"></span>
                            {% endif %}

                        </button>
                        <div class="dropdown-menu dropdown-menu-right">
                            <div class="dropdown-menu-col">
                                    <a class="dropdown-item {% if app.request.locale == 'ar' %}current{% endif %}" href="{{ localize_route('ar') }}"><span class="flag-icon flag-icon-tn"></span>عربي</a>
                                    <a class="dropdown-item {% if app.request.locale == 'en' %}current{% endif %}" href="{{ localize_route('en') }}"><span class="flag-icon flag-icon-us"></span>English</a>
                                    <a class="dropdown-item {% if app.request.locale == 'fr' %}current{% endif %}" href="{{ localize_route('fr') }}"><span class="flag-icon flag-icon-fr"></span>Français</a>
                                    <a class="dropdown-item {% if app.request.locale == 'it' %}current{% endif %}" href="{{ localize_route('it') }}"><span class="flag-icon flag-icon-it"></span>Italiano</a>
                                </div>
                        </div>
                    </div>

                    <div class="dropdown user-menu">
                        <button class="dropdown-toggle" id="dd-user-menu" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            {% if app.user.avatar is null %}
                                <img src="{{ asset('img/avatar-1-256.png') }}" alt="">
                            {% else %}
                                <img src="{{ vich_uploader_asset(app.user, 'imageFile') }}" alt="">
                            {% endif %}
                        </button>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dd-user-menu">
                            <a class="dropdown-item" href="{{ path('fos_user_profile_show') }}"><span class="font-icon glyphicon glyphicon-user"></span>Profile </a>
                            <a class="dropdown-item" href="{{ path('fos_user_profile_edit') }}"><span class="font-icon glyphicon glyphicon-cog"></span>Settings</a>
                            <a class="dropdown-item" href="#"><span class="font-icon glyphicon glyphicon-question-sign"></span>Help</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="{{ path('fos_user_security_logout') }}"><span class="font-icon glyphicon glyphicon-log-out"></span>{{ 'layout.logout'|trans({},'FOSUserBundle') }}</a>
                        </div>
                    </div>

                </div>
            </div>
        </div>


    </div>
</header>

